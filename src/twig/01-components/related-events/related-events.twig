<!-- Related Events -->
<div class="event_related">
	{% if title or description %}
		<div class="event_related_header">
			<div class="fs-row">
				<div class="fs-cell {{ cell }}">
					<div class="event_related_header_inner">
						{% if title %}
							<h2 class="event_related_title">{{ title }}</h2>
						{% endif %}
						{% if description %}
							<div class="event_related_description">
								<p>{{ description }}</p>
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	{% endif %}
	<div class="event_related_body">
		<div class="fs-row">
			<div class="fs-cell">
				<ul class="event_related_items">
					{% for item in items %}
						<li class="event_related_item">
							{% render "@partial-event-item" with {
                                item: item
                            } %}
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</div>
</div>
<!-- END: Related Events -->
