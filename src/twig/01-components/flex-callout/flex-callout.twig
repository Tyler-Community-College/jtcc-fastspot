<div class="flex_callout">
	{% render "@partial-background" with {
		class: "flex_callout",
		image: image,
		sources: {
			'0px': img("portraitClassic").sml,
			'500px': img("classic").med,
			'740px': img("ultrawide").lrg
		}
	} %}
	<div class="fs-row">
		<div class="fs-cell">
			<div class="flex_callout_inner">
				<div class="flex_callout_header">
					<h2 class="flex_callout_title">{{ title }}</h2>
					<p class="flex_callout_caption">{{ caption }}</p>
				</div>
				<div class="flex_callout_content">
					<ul class="flex_callout_links">
						{% for link in links %}
						<li class="flex_callout_item">
							{% render '@partial-link' with {
								title: link.label,
								url: link.url,
								class: "flex_callout",
								icon: "caret_right"
							} %}
						</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
