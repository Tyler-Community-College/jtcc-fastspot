<div class="testimonial theme-{{ theme }}">
	<div class="fs-row">
		<div class="fs-cell {{ cell }}">
			<div class="testimonial_inner">
				<div class="testimonial_content">
					<blockquote class="testimonial_quote">
						<p>{{ quote }}</p>
					</blockquote>

					<div class="testimonial_info">
						<div class="testimonial_quote_name">{{ name }}</div>
						{% if title %}
							<div class="testimonial_quote_title">{{ title }}</div>
						{% endif %}
					</div>
				</div>

				<div class="testimonial_media">
					{% render "@partial-background" with {
						class: "testimonial",
						image: image,
						sources: {
							'0px': img("portraitClassic").sml,
							'500px': img("portraitClassic").med
						}
					} %}

					<div class="testimonial_media_img">
						{% render "@partial-image" with {
							class: "testimonial",
							alt: "",
							itemprop: "",
							image: image,
							sources: [
								img("portraitClassic").med,
								img("portraitClassic").sml,
								img("portraitClassic").xsml,
								img("portraitClassic").xxsml
							]
						} %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
