<!-- Header -->
<header class="header" id="header">
	<a class="skip_link skip_main" id="skip_link" href="#skip_content">Skip to main content</a>

	{% if page.alert == true %}
		<a class="js-skip-alert skip_link skip_alert" id="alert_link" href="#alert">Skip to site alert</a>
	{% endif %}

	<div class="header_ribbon">
		<div class="fs-row">
			<div class="fs-cell">
				<div class="header_ribbon_inner">
					{% render "@navigation-basic" with {
						class: "secondary_nav",
						modifier: "lg",
						title: "Secondary",
						toggle_icon: "",
						active_index: "",
						links: navigation.secondary
					} %}

					<div class="js-audience-group audience_group">
						{% render "@partial-button-toggle" with {
							class: "audience",
							title: "Audience",
							icon: "caret_down",
							active_title: "Close",
							active_icon: "close",
							swap_target: ".js-audience-group",
							swap_link: "audience"
						} %}

						{% render "@navigation-basic" with {
							class: "audience_nav",
							modifier: "lg",
							title: "Audience",
							toggle_icon: "",
							active_index: "",
							links: navigation.audience
						} %}
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="header_primary">
		<div class="fs-row">
			<div class="fs-cell">
				<div class="header_primary_inner">
					{% render "@partial-logo" with {
						modifier: "header",
						icon: "logo",
						print: ""
					} %}

					<div class="header_controls">
						{% render "@partial-link-toggle" with {
							class: "menu",
							title: "Menu",
							url: "#menu",
							icon: "menu",
							swap_target: ".menu",
							swap_link: "menu"
						} %}

						{% render "@partial-link" with {
							class: "search",
							title: "Search",
							url: "page-search.html"
						} %}
					</div>

					{% render "@partial-search" with {
						modifier: "header",
						aria: "Site Search",
						label: "Search",
						placeholder: "",
						button_text: "Submit"
					} %}

					{% render "@navigation-basic" with {
						class: "main_nav",
						modifier: "lg",
						title: "Site",
						toggle_icon: "caret_down",
						active_index: page.activePage,
						links: navigation.main
					} %}
				</div>
			</div>
		</div>
	</div>
</header>
<!-- END: Header -->
