		<script type="application/ld+json">
			{
				"@context": "http://schema.org",
				"@type": "NewsArticle",
				"url": "#",
				"publisher": {
					"@type": "{{ config.schema_type }}",
					"name": "{{ config.name }}"
				},
				"headline": "{{ page.title }}",
				"mainEntityOfPage": "#",
				"image": "{{ page.image }}",
