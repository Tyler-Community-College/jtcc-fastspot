		<!-- Page Content -->
		<div class="page_content">
			<div class="fs-row">
				<div class="fs-cell {{ cell }}">

					{% if page.image %}
					<figure class="news_entry_figure">
						{% include partial("image") with {
							class: "news_entry",
							alt: "",
							image: page.image,
							sources: [
								img.classic.xlrg,
								img.classic.lrg,
								img.classic.med,
